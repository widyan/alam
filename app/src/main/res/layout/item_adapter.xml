<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_item_alamku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/intro1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_item_alamku"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <com.widyan.alamku.customs.CustomTextViewLatoRegular
                android:id="@+id/txt_item_alamku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gunung Bromo"
                android:textSize="16sp"
                android:textColor="@color/colorWhite" />

            <RatingBar
                android:id="@+id/rate_bar_item_alamku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>